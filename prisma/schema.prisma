datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  videos    Video[]
  aiJobs    AIJob[]
}

model Video {
  id              String     @id @default(cuid())
  projectId       String
  project         Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  youtubeVideoId  String
  title           String
  url             String
  status          String     @default("pending") // pending, fetching, fetched, no_caption, error
  errorMessage    String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  subtitles       Subtitle[]
  aiJobs          AIJob[]

  @@unique([projectId, youtubeVideoId])
}

model Subtitle {
  id              String   @id @default(cuid())
  videoItemId    String
  video           Video    @relation(fields: [videoItemId], references: [id], onDelete: Cascade)
  language        String
  isAutoGenerated Boolean  @default(false)
  format          String   @default("txt") // txt, srt, vtt
  contentText     String   @db.Text
  createdAt       DateTime @default(now())

  @@index([videoItemId])
}

model AIJob {
  id           String   @id @default(cuid())
  projectId    String?
  project      Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  videoItemId  String?
  video        Video?   @relation(fields: [videoItemId], references: [id], onDelete: SetNull)
  type         String   // linkedin, blog, analyze
  status       String   @default("pending") // pending, processing, completed, failed
  outputText   String?  @db.Text
  errorMessage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([projectId])
  @@index([videoItemId])
}
